@model List<User>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="userRoleManagement">

    <table id="UserRoleManagement">
        <thead>
            <tr>
                <td>#</td>
                <td>User Name</td>
                <td>Email</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                i++;

                <tr>
                    <td>@i</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td><a href="~/Admin/RoleManagement/EditUserRoles/@item.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#UserRoleManagement").DataTable();
        });
    </script>
}
