@model List<Role>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="RoleManagement">

    <table id="RoleManagement">
        <thead>
            <tr>
                <td>#</td>
                <td>Name</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                i++;

                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td><a href="~/Admin/RoleManagement/Edit/@item.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#RoleManagement").DataTable();
        });
    </script>
}
