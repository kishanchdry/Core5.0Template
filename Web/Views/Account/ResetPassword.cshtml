@model Shared.Models.API.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
  
}

<div class="form-sec" style="padding:20px;">
    <div class="form-heading text-center">
        <img src="../form-logo.png" alt="" />
        <h1>@ViewBag.Title.</h1>
        <h2>Create a new account.</h2>
    </div>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", area = "", role = "form" }))
    {

        @Html.HiddenFor(m => m.Email); 
        @Html.HiddenFor(m => m.Token);
        @Html.HiddenFor(m => m.Token);
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default w-100" value="Register" />
        </div>
    }
</div>

